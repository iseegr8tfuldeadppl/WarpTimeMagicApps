<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/good">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="0dp"
                        android:id="@+id/hoursdisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="89sp"
                        android:text="12"
                        android:textColor="#FFF"/>
                    <TextView
                        android:id="@+id/twodots"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="89sp"
                        android:text=":"
                        android:textColor="#FFF"/>
                    <TextView
                        android:padding="0dp"
                        android:id="@+id/minutesdisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="89sp"
                        android:text="30"
                        android:textColor="#FFF"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Sun, Jan 12"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:visibility="gone"
        android:id="@+id/tutorialexit"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/doitagain"
                android:textAllCaps="false"
                android:onClick="doitagainClicked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="20sp"
                android:background="@drawable/outer"
                android:layout_marginBottom="25dp"
                android:text="@string/do_it_again"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/backtotutorial"
                android:textAllCaps="false"
                android:background="@drawable/outer"
                android:onClick="backtotutorialpageClicked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="20sp"
                android:text="@string/back_to_tutorial_page"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/blackscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/reload"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/tutorialtextsize"
                android:onClick="reloadClicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:layout_weight="2"/>
            <TextView
                android:clickable="true"
                android:id="@+id/addthree"
                android:gravity="center"
                android:focusable="true"
                android:textColor="@color/white"
                android:textSize="@dimen/tutorialtextsize"
                android:onClick="TripleincrementerClicked"
                android:background="#000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:focusable="true"
            android:id="@+id/addtwo"
            android:textColor="@color/white"
            android:textSize="@dimen/tutorialtextsize"
            android:onClick="DoubleincrementerClicked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"/>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:onClick="vibratorClicked"
                android:layout_weight="2"
                android:id="@+id/confirm"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/tutorialtextsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"/>
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/addone"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/tutorialtextsize"
                android:onClick="incrementerClicked"
                android:background="#000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>